          trigger: '.whatis-content',
          start: 'top 80%',
          end: 'bottom 20%',
          toggleActions: 'play none none reverse'
        },
        x: -50,
        opacity: 0,
        duration: 1,
        ease: 'power3.out'
      });
      
      gsap.from('.whatis-image', {
        scrollTrigger: {
          trigger: '.whatis-image',
          start: 'top 80%',
          end: 'bottom 20%',
          toggleActions: 'play none none reverse'
        },
        x: 50,
        opacity: 0,
        duration: 1,
        ease: 'power3.out'
      });
      
      // Animaci√≥n de los elementos flotantes
      gsap.to('.whatis-image .absolute', {
        y: -10,
        duration: 2,
        ease: 'power2.inOut',
        stagger: 0.3,
        repeat: -1,
        yoyo: true
      });
    }
  });
</script>
