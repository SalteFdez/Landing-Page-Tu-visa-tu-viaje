---
// ProcessSteps.astro
const steps = [
  {
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>`,
    bg: "bg-gradient-to-br from-[#E9744C] to-[#EFA297]",
    title: "Elegí tu destino",
    desc: "Seleccioná el país que querés visitar",
    color: "text-[#E9744C]"
  },
  {
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
    </svg>`,
    bg: "bg-gradient-to-br from-[#3E915C] to-[#327BA8]",
    title: "Gestioná tu VISA",
    desc: "Nosotros nos encargamos de todos los trámites",
    color: "text-[#3E915C]"
  },
  {
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
    </svg>`,
    bg: "bg-gradient-to-br from-[#327BA8] to-[#B68F6A]",
    title: "Contratá seguro y pasaje",
    desc: "Protección completa para tu viaje",
    color: "text-[#327BA8]"
  },
  {
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
    </svg>`,
    bg: "bg-gradient-to-br from-[#B68F6A] to-[#EFA297]",
    title: "Ingresá al mundo Tu Visa, Tu Viaje",
    desc: "Comunidad de viajeros y soporte 24/7",
    color: "text-[#B68F6A]"
  },
  {
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>`,
    bg: "bg-gradient-to-br from-[#EFA297] to-[#E9744C]",
    title: "¡Comenzá tu viaje!",
    desc: "Todo listo para la aventura",
    color: "text-[#EFA297]"
  },
];
---

<section id="proceso" class="w-full py-16 md:py-24 lg:py-32 bg-gradient-to-br from-gray-50 to-white relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 left-10 w-32 h-32 bg-[#E9744C] rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-40 h-40 bg-[#327BA8] rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-60 h-60 bg-[#EFA297] rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 md:px-6 relative z-10">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="process-title text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
        ¿Cómo armar tu 
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#E9744C] to-[#327BA8]">experiencia de viaje</span> 
        perfecta?
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Solo 5 pasos simples para transformar tu sueño en realidad
      </p>
    </div>

    <!-- Steps Grid -->
    <div class="grid gap-8 md:grid-cols-5 max-w-7xl mx-auto">
      {steps.map((step, i) => (
        <div class="process-step group relative">
          <!-- Línea conectora -->
          {i < steps.length - 1 && (
            <div class="hidden md:block absolute top-10 left-full w-full h-0.5 bg-gradient-to-r from-gray-300 to-transparent z-0"></div>
          )}
          
          <!-- Step Card -->
          <div class="step-card relative z-10 bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100">
            <!-- Icon Container -->
            <div class="icon-container mb-6 relative">
              <div class={`w-16 h-16 rounded-2xl flex items-center justify-center ${step.bg} shadow-lg group-hover:scale-110 transition-transform duration-300`} set:html={step.icon}>
              </div>
              <!-- Número del paso -->
              <div class="absolute -top-2 -right-2 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                {i + 1}
              </div>
            </div>
            
            <!-- Content -->
            <div class="text-center">
              <h3 class="text-lg font-bold text-gray-900 mb-3 group-hover:text-[#E9744C] transition-colors duration-300">
                {step.title}
              </h3>
              <p class="text-gray-600 text-sm leading-relaxed">
                {step.desc}
              </p>
            </div>
            
            <!-- Hover effect -->
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-[#E9744C]/5 to-[#327BA8]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-16">
      <div class="bg-gradient-to-r from-[#E9744C] to-[#327BA8] rounded-2xl p-8 md:p-12 text-white">
        <h3 class="text-2xl md:text-3xl font-bold mb-4">
          ¿Listo para comenzar tu aventura?
        </h3>
        <p class="text-lg mb-6 opacity-90">
          Miles de viajeros ya confiaron en nosotros. ¡Es tu turno!
        </p>
        <button class="bg-white text-[#E9744C] px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-colors duration-300 transform hover:scale-105">
          Comenzar ahora
        </button>
      </div>
    </div>
  </div>
</section>

<style>
  .process-title {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.3s forwards;
  }
  
  .process-step {
    opacity: 0;
    transform: translateY(30px);
  }
  
  .process-step:nth-child(1) { animation: fadeInUp 0.8s ease-out 0.5s forwards; }
  .process-step:nth-child(2) { animation: fadeInUp 0.8s ease-out 0.7s forwards; }
  .process-step:nth-child(3) { animation: fadeInUp 0.8s ease-out 0.9s forwards; }
  .process-step:nth-child(4) { animation: fadeInUp 0.8s ease-out 1.1s forwards; }
  .process-step:nth-child(5) { animation: fadeInUp 0.8s ease-out 1.3s forwards; }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .step-card {
    backdrop-filter: blur(10px);
  }
  
  .icon-container {
    position: relative;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .process-step {
      margin-bottom: 2rem;
    }
  }
</style>

<script>
  // @ts-nocheck - GSAP está disponible globalmente
  document.addEventListener('DOMContentLoaded', () => {
    if (typeof gsap !== 'undefined') {
      // Animación de scroll para los pasos
      gsap.registerPlugin(ScrollTrigger);
      
      gsap.from('.process-step', {
        scrollTrigger: {
          trigger: '#proceso',
          start: 'top 80%',
          end: 'bottom 20%',
          toggleActions: 'play none none reverse'
        },
        y: 50,
        opacity: 0,
        duration: 0.8,
        stagger: 0.2,
        ease: 'power3.out'
      });
      
      // Animación de los iconos al hacer hover
      gsap.utils.toArray('.icon-container').forEach(container => {
        container.addEventListener('mouseenter', () => {
          gsap.to(container.querySelector('div'), {
            scale: 1.1,
            rotation: 5,
            duration: 0.3,
            ease: 'back.out(1.7)'
          });
        });
        
        container.addEventListener('mouseleave', () => {
          gsap.to(container.querySelector('div'), {
            scale: 1,
            rotation: 0,
            duration: 0.3,
            ease: 'power2.out'
          });
        });
      });
    }
  });
</script>
