---
// Hero.astro

const whatsappUrl = "https://wa.me/5493875105738?text=Hola, Quiero Asistencia para mi visa Working Holiday!"
---

<section class="relative w-full min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Video de fondo con filtros -->
  <div class="absolute inset-0 z-0">
    <video 
      autoplay 
      muted 
      loop 
      playsinline
      class="w-full h-full object-cover opacity-70 brightness-50 contrast-110 saturate-150"
    >
      <source src="/assets/paisajes.mp4" type="video/mp4">
    </video>
    <!-- Overlay sutil para mejor contraste del texto -->
    <div class="absolute inset-0 bg-black/20"></div>
  </div>

  <!-- Elementos decorativos animados -->
  <div class="absolute inset-0 z-10">
    <div class="floating-circle circle-1"></div>
    <div class="floating-circle circle-2"></div>
    <div class="floating-circle circle-3"></div>
    <div class="floating-circle circle-4"></div>
  </div>

  <!-- Contenido principal -->
  <div class="container mx-auto px-4 sm:px-6 relative z-20">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Título principal con animación -->
      <h1 class="hero-title text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        Viví la experiencia de 
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-[#F9E9D8]">viajar sin complicaciones</span>
      </h1>
      
      <!-- Subtítulo -->
      <p class="hero-subtitle text-lg sm:text-xl md:text-2xl text-white/90 mb-8 max-w-3xl mx-auto leading-relaxed">
        Armá tu propio viaje con nuestros servicios completos de
        <span class="font-semibold text-white"> visas, trámites y seguros</span>,
        como ya lo hicieron miles de viajeros.
      </p>
      
      <!-- Botones -->
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center">
        <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="hero-btn-primary group relative overflow-hidden rounded-xl px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-[#E9744C] to-[#EFA297] hover:from-[#EFA297] hover:to-[#E9744C] transition-all duration-300 transform hover:scale-105 hover:shadow-2xl inline-block">
          <span class="relative z-10">Comenzá tu viaje</span>
          <div class="absolute inset-0 bg-white/20 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
        </a>
        
        <button class="hero-btn-secondary group relative overflow-hidden rounded-xl px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white hover:text-[#E9744C] transition-all duration-300 transform hover:scale-105">
          <span class="relative z-10">Ver Destinos</span>
        </button>
      </div>
      
      <!-- Scroll indicator -->
     
    </div>
  </div>
</section>

<style>
  .floating-circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    animation: float 6s ease-in-out infinite;
  }
  
  .circle-1 {
    width: 80px;
    height: 80px;
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }
  
  .circle-2 {
    width: 120px;
    height: 120px;
    top: 60%;
    right: 15%;
    animation-delay: 2s;
  }
  
  .circle-3 {
    width: 60px;
    height: 60px;
    bottom: 30%;
    left: 20%;
    animation-delay: 4s;
  }
  
  .circle-4 {
    width: 100px;
    height: 100px;
    top: 40%;
    right: 30%;
    animation-delay: 1s;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }
  
  .hero-title {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.5s forwards;
  }
  
  .hero-subtitle {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.8s forwards;
  }
  
  .hero-btn-primary {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 1.1s forwards;
  }
  
  .hero-btn-secondary {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 1.3s forwards;
  }
  
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .floating-circle {
      display: none;
    }
  }
</style>

<script>
  // @ts-nocheck - GSAP está disponible globalmente
  // GSAP animations (se cargará cuando GSAP esté disponible)
  document.addEventListener('DOMContentLoaded', () => {
    // Verificar si GSAP está disponible
    if (typeof gsap !== 'undefined') {
      // Animación de entrada más suave
      gsap.from('.hero-title', {
        duration: 1.2,
        y: 50,
        opacity: 0,
        ease: 'power3.out',
        delay: 0.3
      });
      
      gsap.from('.hero-subtitle', {
        duration: 1.2,
        y: 30,
        opacity: 0,
        ease: 'power3.out',
        delay: 0.6
      });
      
      gsap.from('.hero-btn-primary', {
        duration: 0.8,
        y: 30,
        opacity: 0,
        ease: 'back.out(1.7)',
        delay: 0.9
      });
      
      gsap.from('.hero-btn-secondary', {
        duration: 0.8,
        y: 30,
        opacity: 0,
        ease: 'back.out(1.7)',
        delay: 1.1
      });
      
      // Animación de los círculos flotantes
      gsap.to('.floating-circle', {
        y: -20,
        rotation: 360,
        duration: 4,
        ease: 'power2.inOut',
        stagger: 0.5,
        repeat: -1,
        yoyo: true
      });
    }
  });
</script>
