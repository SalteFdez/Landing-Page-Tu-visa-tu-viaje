---
// Header.astro
---

<header class="header fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <div class="container mx-auto px-2">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="logo group flex items-center space-x-2 md:space-x-3">
        <div class="relative">
          <img
            src="/assets/logo.png"
            width="40"
            height="40"
            alt="Tu Visa, Tu Viaje"
            class="w-8 h-8 md:w-10 md:h-10 rounded-lg md:rounded-xl shadow-lg group-hover:scale-110 transition-transform duration-300"
          />
          <div class="absolute inset-0 bg-gradient-to-br from-[#E9744C]/20 to-[#EFA297]/20 rounded-lg md:rounded-xl blur-sm group-hover:blur-md transition-all duration-300"></div>
        </div>
        <div class="flex flex-col">
          <span class="text-lg md:text-xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent group-hover:from-[#E9744C] group-hover:to-[#EFA297] transition-all duration-300">
            Tu Visa, Tu Viaje
          </span>
          <span class="text-xs text-gray-500 group-hover:text-[#E9744C] transition-colors duration-300">
            Tu compañero de viaje
          </span>
        </div>
      </a>

      <!-- Desktop Navigation - Centered -->
      <nav class="hidden lg:flex items-center justify-center flex-1 mx-4">
        <div class="flex items-center space-x-1 md:space-x-2 bg-white/80 backdrop-blur-sm rounded-xl md:rounded-2xl border border-gray-200/50 shadow-lg">
          <a
            href="/workingholiday"
            class="nav-link group relative px-3 md:px-4 py-2 md:py-3 text-xs md:text-sm font-medium text-gray-700 hover:text-[#E9744C] transition-all duration-300 rounded-lg md:rounded-xl border border-transparent hover:border-[#E9744C]/20 hover:bg-gradient-to-r hover:from-[#E9744C]/5 hover:to-[#EFA297]/5"
          >
            <span>Working Holiday</span>
          </a>
          
          <a
            href="/#servicios"
            class="nav-link group relative px-3 md:px-4 py-2 md:py-3 text-xs md:text-sm font-medium text-gray-700 hover:text-[#E9744C] transition-all duration-300 rounded-lg md:rounded-xl border border-transparent hover:border-[#E9744C]/20 hover:bg-gradient-to-r hover:from-[#E9744C]/5 hover:to-[#EFA297]/5"
          >
            <span>Servicios</span>
          </a>
          
          <a
            href="/#destinos"
            class="nav-link group relative px-3 md:px-4 py-2 md:py-3 text-xs md:text-sm font-medium text-gray-700 hover:text-[#E9744C] transition-all duration-300 rounded-lg md:rounded-xl border border-transparent hover:border-[#E9744C]/20 hover:bg-gradient-to-r hover:from-[#E9744C]/5 hover:to-[#EFA297]/5"
          >
            <span>Destinos</span>
          </a>
          
          <a
            href="/#proceso"
            class="nav-link group relative px-3 md:px-4 py-2 md:py-3 text-xs md:text-sm font-medium text-gray-700 hover:text-[#E9744C] transition-all duration-300 rounded-lg md:rounded-xl border border-transparent hover:border-[#E9744C]/20 hover:bg-gradient-to-r hover:from-[#E9744C]/5 hover:to-[#EFA297]/5"
          >
            <span>Proceso</span>
          </a>
          
          <a
            href="/#contacto"
            class="nav-link group relative px-3 md:px-4 py-2 md:py-3 text-xs md:text-sm font-medium text-gray-700 hover:text-[#E9744C] transition-all duration-300 rounded-lg md:rounded-xl border border-transparent hover:border-[#E9744C]/20 hover:bg-gradient-to-r hover:from-[#E9744C]/5 hover:to-[#EFA297]/5"
          >
            <span>Contacto</span>
          </a>
        </div>
      </nav>
        
      <!-- CTA Button -->
      <div class="hidden lg:block">
        <a
          href="https://www.aseguratuviaje.com/afiliados/florentinabielecki"
          target="_blank"
          rel="noopener noreferrer"
          class="cta-button group relative overflow-hidden bg-gradient-to-r from-[#E9744C] to-[#EFA297] text-white px-4 md:px-6 py-2 md:py-3 rounded-lg md:rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-xl border border-[#E9744C]/20 flex items-center space-x-1 md:space-x-2"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="md:w-5 md:h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/>
            <path d="m9 12 2 2 4-4"/>
          </svg>
          <span class="text-xs md:text-sm">Seguro de Viaje</span>   
          <div class="absolute inset-0 bg-white/20 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobileMenuBtn"
        class="lg:hidden relative p-2 text-gray-700 hover:text-[#E9744C] transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-[#E9744C] focus:ring-offset-2 rounded-lg"
        aria-label="Menú de navegación"
      >
        <div class="w-6 h-6 flex flex-col justify-center items-center">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </div>
      </button>
    </div>
  </div>
</header>

<!-- Mobile Menu Overlay -->
